<p id="notice"><%= notice %></p>

<h1>Listing Names</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Prefix</th>
      <th>First</th>
      <th>Middle</th>
      <th>Last</th>
      <th>Suffix</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.person %></td>
        <td><%= name.prefix %></td>
        <td><%= name.first %></td>
        <td><%= name.middle %></td>
        <td><%= name.last %></td>
        <td><%= name.suffix %></td>
        <td><%= link_to 'Show', name %></td>
        <td><%= link_to 'Edit', edit_name_path(name) %></td>
        <td><%= link_to 'Destroy', name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

